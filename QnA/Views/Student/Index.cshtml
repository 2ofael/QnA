<!DOCTYPE html>
<html>
<head>
    <title>Teacher Portal</title>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            height: 200px;
        }
    </style>
</head>
<body>


    <div class="container">
        <h2 class="text-center mb-4">Student Dashboard</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Asked By You</h5>
                        <p class="card-text">Your All Questions</p>
                       
                        <a href="@Url.Action("AllQuestionsAskedByStudent", "Student")" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Your Answers</h5>
                        <p class="card-text">Answered For you</p>
                        <a href="@Url.Action("AllAnswersForCurrentStudent", "Student")" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>


            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">All Question</h5>
                        <p class="card-text">View all questions</p>
                        <a href="@Url.Action("QuestionList", "Student")" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
       

           
        </div>
    </div>


</body>
</html>
