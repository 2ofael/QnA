@{
    ViewData["Title"] = "Q&A Platform";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
   
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Welcome to the Q&A Platform</h1>
        <div class="row mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Teacher</h5>
                        <p class="card-text">As a teacher, you can post questions, answer questions, and engage with students.</p>
                        <a href="#" class="btn btn-primary">Register as Teacher</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Student</h5>
                        <p class="card-text">As a student, you can ask questions, receive answers, and learn from your peers and teachers.</p>
                        <a href="#" class="btn btn-primary">Register as Student</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Login</h5>
                        <p class="card-text">Already registered? Login here to access the platform.</p>
                        <a href="#" class="btn btn-primary">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
</body>
</html>
